<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="Home" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ChromaticMethod.Home">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Search" Activated="Search_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="Header" TargetType="Label">
                <Setter Property="TextColor" Value="Black"></Setter>
                <Setter Property="FontSize" Value="30"></Setter>
                <Setter Property="HorizontalOptions" Value="Center"></Setter>
                <Setter Property="Margin" Value="0, 0, 0, 20"></Setter>
            </Style>
            <Style x:Key="subHeader" TargetType="Label">
                <Setter Property="TextColor" Value="Black"></Setter>
                <Setter Property="FontSize" Value="20"></Setter>
                <Setter Property="HorizontalOptions" Value="Center"></Setter>
                <Setter Property="Margin" Value="0, 0, 0, 20"></Setter>
            </Style>
             <Style x:Key="ButtonKey" TargetType="Button">
                <Setter Property="BackgroundColor" Value="LightGray"></Setter>
                <Setter Property="FontSize" Value="15"></Setter>
                <Setter Property="Margin" Value="75, 5, 75, 5"></Setter>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ScrollView>
        <StackLayout Padding="0, 20, 0, 0">
            <Label Text="Welcome to Chromatica" Style="{StaticResource Header}"></Label>
            <Label Text="Choose a key to get started:" Style="{StaticResource subHeader}"></Label>
            <Button Text="C" Clicked="C_Clicked" Style="{StaticResource ButtonKey}"></Button>
            <Button Text="C#/Db" Clicked="CsDb_Clicked" Style="{StaticResource ButtonKey}"></Button>
            <Button Text="D" Clicked="D_Clicked" Style="{StaticResource ButtonKey}"></Button>
            <Button Text="D#/Eb" Clicked="DsEb_Clicked" Style="{StaticResource ButtonKey}"></Button>
            <Button Text="E" Clicked="E_Clicked" Style="{StaticResource ButtonKey}"></Button>
            <Button Text="F" Clicked="F_Clicked" Style="{StaticResource ButtonKey}"></Button>
            <Button Text="F#/Gb" Clicked="FsGb_Clicked" Style="{StaticResource ButtonKey}"></Button>
            <Button Text="G" Clicked="G_Clicked" Style="{StaticResource ButtonKey}"></Button>
            <Button Text="G#/Ab" Clicked="GsAb_Clicked" Style="{StaticResource ButtonKey}"></Button>
            <Button Text="A" Clicked="A_Clicked" Style="{StaticResource ButtonKey}"></Button>
            <Button Text="A#/Bb" Clicked="AsBb_Clicked" Style="{StaticResource ButtonKey}"></Button>
            <Button Text="B" Clicked="B_Clicked" Style="{StaticResource ButtonKey}"></Button>
        </StackLayout>
    </ScrollView>
</ContentPage>